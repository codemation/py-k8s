FROM debian:jessie

RUN apt-get update \
        && apt-get install --no-install-recommends --no-install-suggests -y \
                python-pip \
                git \
		wget \
        && pip install web.py
ENV SETUP_DIR="ig_setup"
RUN mkdir $SETUP_DIR
WORKDIR $SETUP_DIR
RUN wget https://github.com/codemation/py-k8s/raw/master/setup/setup_v0.1.sh

WORKDIR /
RUN mkdir /ignition
WORKDIR /ignition
EXPOSE $IG_BASE_PORT

CMD sh /$SETUP_DIR/setup.sh
